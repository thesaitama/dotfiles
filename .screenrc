# thesaitama@ .screenrc

# Escape key is C-t, literal is a.
escape ^Ta

altscreen on
defscrollback 10000
startup_message off
vbell off

termcapinfo xterm* ti@:te@

caption always '%?%F%{= kW}%:%{= Kk}%?%2n%f%07=%t%='
hardstatus alwayslastline '%m/%d %02c:%s %{= .g}%H%{-} %L=%-w%45L>%{=u g.}%n %t%{-}%+w %-17<%=%{= .y}(%l)'

