# .tigrc

set main-view = id date author commit-title:graph=yes,refs=yes
set blob-view-line-number = yes
set blame-view-line-number = yes

set diff-highlight = true
set ignore-case = true
set mouse = true
set refresh-mode = auto
set refresh-interval = 60
set wrap-lines = yes

color title-focus white blue
color cursor white black
color diff-chunk black white
color diff-add-highlight default green standout
color diff-del-highlight default red standout
